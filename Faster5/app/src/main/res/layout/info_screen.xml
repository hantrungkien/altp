<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BackGround"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="com.example.gcs.faster5.MainActivity">


    <ImageView
        android:id="@+id/tableinfo"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/tableinfo" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatarUser"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tableinfo"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="5dp" />


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatarUser"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/avatarUser"
        android:layout_toRightOf="@+id/avatarUser"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/favtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableinfo"
        android:layout_marginLeft="20dp"
        android:text="Favorite topics"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"

        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/favtopic"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/footballButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/football" />

            <ImageButton
                android:id="@+id/artButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/art" />

            <ImageButton
                android:id="@+id/mathButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/math" />

            <ImageButton
                android:id="@+id/fruitButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/footballButton"
                android:layout_alignStart="@+id/footballButton"
                android:layout_alignTop="@+id/musicButton"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/fruit" />

            <ImageButton
                android:id="@+id/musicButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/artButton"
                android:layout_alignStart="@+id/artButton"
                android:layout_below="@+id/artButton"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/music" />

            <ImageButton
                android:id="@+id/techButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/mathButton"
                android:layout_alignStart="@+id/mathButton"
                android:layout_alignTop="@+id/musicButton"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/tech" />

            <ImageButton
                android:id="@+id/lockButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="280dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/lock" />

        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/fblogout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/avatarUser"
        android:src="@drawable/logout" />

    <ImageView
        android:id="@+id/actionbar"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/actionbar" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/setting"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"/>

    <TextView
        android:id="@+id/faster5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="FASTER5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />


</RelativeLayout>