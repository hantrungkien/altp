<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/xml_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.oic.game.ailatrieuphu.ui.activity.MainActivity">


    <ImageView
        android:id="@+id/imageview_altp"
        android:layout_width="@dimen/layout_width_320"
        android:layout_height="@dimen/layout_height_55"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_marginTop_30"
        android:src="@drawable/altp" />

    <ImageView
        android:id="@+id/imageview_online"
        android:layout_width="@dimen/layout_width_65"
        android:layout_height="@dimen/layout_height_30"
        android:layout_alignEnd="@+id/imageview_altp"
        android:layout_alignRight="@+id/imageview_altp"
        android:layout_below="@+id/imageview_altp"
        android:src="@drawable/online" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_fb"
        style="@style/FacebookLoginButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableLeft="@null" />

    <Button
        android:id="@+id/btn_fakefb"
        android:layout_width="@dimen/layout_width_100"
        android:layout_height="@dimen/layout_height_100"
        android:layout_below="@+id/imageview_altp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fbbutton" />

    <ImageView
        android:id="@+id/imageview_or"
        android:layout_width="@dimen/layout_width_150"
        android:layout_height="@dimen/layout_height_45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_marginTop_200"
        android:src="@drawable/or" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_avatar"
        android:layout_width="@dimen/layout_width_100"
        android:layout_height="@dimen/layout_height_100"
        android:layout_alignLeft="@+id/btn_fakefb"
        android:layout_alignStart="@+id/btn_fakefb"
        android:layout_below="@+id/imageview_or"
        android:layout_marginTop="@dimen/layout_marginTop_15"
        android:src="@drawable/avatar" />

    <FrameLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_avatar"
        android:layout_marginTop="@dimen/layout_marginTop_15">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_2"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/layout_marginBottom_2"
            android:background="#FFF" />

        <ImageView
            android:id="@+id/imageview_name"
            android:layout_width="@dimen/layout_width_280"
            android:layout_height="@dimen/layout_height_65"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/paddingTop_5"
            android:src="@drawable/answer0" />

        <EditText
            android:id="@+id/text_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop_17"
            android:background="@android:color/transparent"
            android:duplicateParentState="true"
            android:ellipsize="start"
            android:ems="1"
            android:focusableInTouchMode="false"
            android:foregroundGravity="left"
            android:gravity="center"
            android:hint="@string/hint_edittex_login"
            android:inputType="none"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingBottom="@dimen/paddingBottom_5"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#85ffffff"
            android:textSize="@dimen/text_size_xlarge" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/layout_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_name">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_2"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/layout_marginBottom_2"
            android:background="#FFF" />

        <Button
            android:id="@+id/textview_city_login"
            android:layout_width="@dimen/layout_width_280"
            android:layout_height="@dimen/layout_height_65"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_marginTop_5"
            android:background="@drawable/answer0"
            android:paddingBottom="@dimen/paddingBottom_10"
            android:text="@string/city"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_xlarge" />


    </FrameLayout>


    <RelativeLayout
        android:id="@+id/layout_button_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_city"
        android:layout_marginTop="@dimen/layout_marginTop_5">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_2"
            android:layout_centerVertical="true"
            android:background="#FFF" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height_40"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/layout_marginLeft_110"
            android:layout_marginRight="@dimen/layout_marginRight_110"
            android:layout_marginTop="@dimen/layout_marginTop_5"
            android:background="@drawable/answer0"
            android:paddingBottom="@dimen/paddingBottom_7"
            android:text="@string/btnLogin"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
