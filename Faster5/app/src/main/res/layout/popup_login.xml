<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:background="@android:color/transparent"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:paddingBottom="210dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edittext_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:inputType="none"
        android:maxLength="16"
        android:paddingBottom="200dp"
        android:textColor="#000000" />


    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_name"
        android:layout_alignEnd="@+id/image_roundrec_name"
        android:layout_alignRight="@+id/image_roundrec_name"
        android:text="CLOSE" />

    <ImageView
        android:id="@+id/image_roundrec_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_location"
        android:layout_centerHorizontal="true"
        android:src="@drawable/roundrec" />

    <ImageView
        android:id="@+id/image_roundrec_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edittext_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/roundrec" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_name"
        android:layout_alignLeft="@+id/image_roundrec_name"
        android:layout_alignStart="@+id/image_roundrec_name"
        android:text="OK" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edittext_location"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />
</RelativeLayout>