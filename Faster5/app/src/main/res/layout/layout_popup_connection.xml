<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/layout_marginLeft_40"
        android:layout_marginRight="@dimen/layout_marginRight_40"
        android:background="@drawable/xml_popup_bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_erro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_marginTop="@dimen/layout_marginTop_20"
            android:src="@drawable/button_erro" />


        <Button
            android:id="@+id/btn_tryagain"
            android:layout_width="@dimen/layout_width_250"
            android:layout_height="@dimen/layout_height_50"
            android:layout_marginLeft="@dimen/layout_marginLeft_30"
            android:layout_marginRight="@dimen/layout_marginRight_30"
            android:background="@drawable/answer0"
            android:gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop_30"
            android:layout_marginBottom="@dimen/layout_marginBottom_20"
            android:paddingBottom="@dimen/paddingBottom_10"
            android:text="@string/try_again_text"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>