<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@color/colorPrimary</item>-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/fbbutton</item>
        <item name="android:textSize">0sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@animator/dialog_enter_noani</item>
        <item name="android:windowExitAnimation">@animator/dialog_exit_noani</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>


    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="RateDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF1493</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">#00366D</item>
        <item name="android:background">#ffffff</item>
    </style>
</resources>
